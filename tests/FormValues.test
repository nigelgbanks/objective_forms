function objective_forms_test_form_values_form(array &$form_state) {
  module_load_include('inc', 'objective_forms', 'Form');
  $drupal_form = array(
    'first' => array(
      '#type' => 'textfield',
      '#title' => 'first',
    ),
    'submit' => array(
      '#type' => 'submit',
      '#value' => 'Submit'
    )
  );
  $form = new Form($drupal_form, $form_state);
  return $form->toArray();
}

